{
  "name": "monkeytalkie",
  "version": "1.0.5",
  "description": "MonkeyTalkie - Omgg Ekibinin Monkeylerine Ã–zel",
  "main": "main.js",
  "author": "Ensar - Omgg Ekibi",
  "homepage": "https://github.com/ensar0zturk/monkeytalkie",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-linux": "electron-builder --linux",
    "dist": "npm run build-win",
    "pack": "electron-builder --dir",
    "publish": "electron-builder --win --publish=always",
    "release": "npm version patch && npm run publish",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "monkeytalkie",
    "omgg",
    "voice-chat",
    "gaming",
    "team-chat",
    "electron"
  ],
  "license": "MIT",
  "devDependencies": {
    "electron": "^37.2.4",
    "electron-builder": "^24.13.3",
    "electron-updater": "^6.1.7"
  },
  "dependencies": {
    "socket.io-client": "^4.7.4"
  },
  "build": {
    "appId": "com.omgg.monkeytalkie",
    "productName": "MonkeyTalkie",
    "publish": [
      {
        "provider": "github",
        "owner": "ensar0zturk",
        "repo": "monkeytalkie"
      }
    ],
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/*.md",
      "!.git",
      "!dist",
      "!node_modules"
    ],
    "win": {
      "target": {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      },
      "icon": "assets/icon.ico",
      "publisherName": "Omgg Team",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "MonkeyTalkie"
    }
  }
}
